<!DOCTYPE html>
<html>
  <head>
    <title>EventHelper</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="wrapper">
      <div class="navbar">


        <div class="">
          <% if current_user.present? %>
            <div>
            <p><%= link_to 'Helper' %></p>
            <p><%= link_to 'Профиль', users_path %></p>
            <p><%= link_to 'События', events_path %></p>
            <p><%= link_to 'Категории', categories_path %></p>
            </div>

            <div>
            <%= content_tag 'span', "#{current_user.email[0..5]}...", class: 'mr-sm ' %>
            <%= button_to 'Выйти', session_path, method: :delete %>
            </div>
          <% else %>
            <%= link_to 'Регистрация', new_user_path, class: 'button button-yellow mr-sm' %>
            <%= link_to 'Вход', new_session_path, class: 'button button-yellow ' %>
          <% end %>
        </div>

      </div>
      <hr>
      <% if flash[:notice].present? %>
        <p><%= flash[:notice] %></p>
      <% elsif flash[:alert].present? %>
        <p><%= flash[:alert] %></p>
      <% end %>
      <hr>
      <%= yield %>
    </div>
    </body>
</html>
